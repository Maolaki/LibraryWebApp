{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ReverseProxy": {
        "Routes": {
            "AuthRoute": {
                "ClusterId": "AuthCluster",
                "Match": {
                    "Path": "/auth-service/{**catch-all}"
                },
                "Transforms": [
                    {
                        "PathPattern": "{**catch-all}"
                    }
                ]
            },
            "AuthorRoute": {
                "ClusterId": "AuthorCluster",
                "Match": {
                    "Path": "/author-service/{**catch-all}"
                },
                "Transforms": [
                    {
                        "PathPattern": "{**catch-all}"
                    }
                ]
            },
            "BookRoute": {
                "ClusterId": "BookCluster",
                "Match": {
                    "Path": "/book-service/{**catch-all}"
                },
                "Transforms": [
                    {
                        "PathPattern": "{**catch-all}"
                    }
                ]
            },
            "SwaggerAuthRoute": {
                "ClusterId": "AuthCluster",
                "Match": {
                    "Path": "/Auth/{**catch-all}" 
                },
                "Transforms": [
                    {
                        "PathPrefix": "/auth-service"
                    }
                ]
            },
            "SwaggerAuthorRoute": {
                "ClusterId": "AuthorCluster",
                "Match": {
                    "Path": "/Author/{**catch-all}"
                },
                "Transforms": [
                    {
                        "PathPrefix": "/author-service"
                    }
                ]
            },
            "SwaggerBookRoute": {
                "ClusterId": "BookCluster",
                "Match": {
                    "Path": "/Book/{**catch-all}"
                },
                "Transforms": [
                    {
                        "PathPrefix": "/book-service"
                    }
                ]
            }
        },
        "Clusters": {
            "AuthCluster": {
                "Destinations": {
                    "https_destination": {
                        "Address": "https://localhost:7001"
                    },
                    "http_destination": {
                        "Address": "http://localhost:5001"
                    }
                }
            },
            "AuthorCluster": {
                "Destinations": {
                    "https_destination": {
                        "Address": "https://localhost:7002"
                    },
                    "http_destination": {
                        "Address": "http://localhost:5002"
                    }
                }
            },
            "BookCluster": {
                "Destinations": {
                    "https_destination": {
                        "Address": "https://localhost:7003"
                    },
                    "http_destination": {
                        "Address": "http://localhost:5003"
                    }
                }
            }
        }
    }
}